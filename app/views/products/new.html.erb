<h1>New Product</h1>

<p>
  <%= form_for :product, url: {:action => 'create'} do |f| %>
    <%= f.label :title, 'Title' %>:<br>
    <%= f.text_field 'title' %><br><br>
    <%= f.label :description, 'Description' %>:<br>
    <%= f.text_field 'description' %><br><br>
    <%= f.submit "Create" %>
  <% end %>
</p>


