<h1>Products List</h1>

<div class="new-product-background-color">
  <%= link_to 'Create New Product', :action => 'new' %>
</div>

<p>
  <% @products.each do |product| %>
    <h2><%= link_to product.title, :action => 'show', :id => product.id %>:</h2><%= product.description %><br><br>
      <%= link_to 'Edit', :action => 'edit', :id => product.id %> | 
      <%= link_to 'Destroy', {:action => 'destroy', :id => product.id}, :confirm => 'Are you sure you want to destroy this product?', :method => :post %><br><br>
  <hr>
  <% end %>
</p>

<br />

